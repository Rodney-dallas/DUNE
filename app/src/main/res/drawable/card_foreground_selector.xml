<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="true">
        <layer-list>
            <!-- Outer Glow -->
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="#40673AB7" />
                    <corners android:radius="10dp" />
                    <padding
                        android:bottom="8dp"
                        android:left="8dp"
                        android:right="8dp"
                        android:top="8dp" />
                </shape>
            </item>
            <!-- Middle Glow -->
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="#604A1E69" />
                    <corners android:radius="8dp" />
                    <padding
                        android:bottom="6dp"
                        android:left="6dp"
                        android:right="6dp"
                        android:top="6dp" />
                </shape>
            </item>
            <!-- White Border with spacing -->
            <item>
                <inset
                    android:insetLeft="6dp"
                    android:insetTop="6dp"
                    android:insetRight="6dp"
                    android:insetBottom="6dp">
                    <shape android:shape="rectangle">
                        <stroke
                            android:width="2dp"
                            android:color="#4A1E69" />
                        <corners android:radius="4dp" />
                    </shape>
                </inset>
            </item>
        </layer-list>
    </item>
    <item android:state_selected="true">
        <layer-list>
            <!-- Outer Glow -->
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="#40673AB7" />
                    <corners android:radius="10dp" />
                    <padding
                        android:bottom="8dp"
                        android:left="8dp"
                        android:right="8dp"
                        android:top="8dp" />
                </shape>
            </item>
            <!-- Middle Glow -->
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="#604A1E69" />
                    <corners android:radius="8dp" />
                    <padding
                        android:bottom="6dp"
                        android:left="6dp"
                        android:right="6dp"
                        android:top="6dp" />
                </shape>
            </item>
            <!-- White Border with spacing -->
            <item>
                <inset
                    android:insetLeft="6dp"
                    android:insetTop="6dp"
                    android:insetRight="6dp"
                    android:insetBottom="6dp">
                    <shape android:shape="rectangle">
                        <stroke
                            android:width="2dp"
                            android:color="#4A1E69" />
                        <corners android:radius="4dp" />
                    </shape>
                </inset>
            </item>
        </layer-list>
    </item>
    <item android:drawable="@android:color/transparent"/>
</selector>